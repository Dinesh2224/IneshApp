<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".OtpActivity"
    tools:showIn="@layout/activity_otp">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:ems="10"
            android:maxLength="1"
            android:nextFocusForward="@+id/otp2" />
        android:inputType="textPersonName|number"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="261dp" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:ems="10"
            android:maxLength="1"
            android:nextFocusForward="@+id/otp3"
            android:textAlignment="center" />
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="261dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:ems="10"
            android:maxLength="1"
            android:nextFocusForward="@+id/otp4"
            android:textAlignment="center" />
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="261dp" />


        <EditText
            android:id="@+id/otp4"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="261dp" />
    </android.support.v7.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/varela"
        android:text="Please Enter Your OTP"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sbotp"
        android:layout_width="wrap_content"
        android:layout_height="49dp"

        android:layout_marginTop="60dp"
        android:background="@drawable/edittext_bg_round"
        android:text="Validate"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCompat"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCompat"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat" />

    <TextView
        android:id="@+id/sbresenotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="96dp"
        android:text="Didn`t Recived Otp? Resend Otp"
        app:layout_constraintEnd_toEndOf="@+id/sbotp"
        app:layout_constraintStart_toStartOf="@+id/sbotp"
        app:layout_constraintTop_toBottomOf="@+id/sbotp" />




</android.support.constraint.ConstraintLayout>